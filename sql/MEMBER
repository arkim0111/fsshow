CREATE TABLE MEMBER(
MEM_LEV NUMBER(1) DEFAULT 1 NOT NULL, -- 회원 등급
MEM_IDX NUMBER(30) PRIMARY KEY NOT NULL, -- 회원 고유 번호
MEM_ID VARCHAR2(30) UNIQUE NOT NULL, -- 아이디
MEM_PW VARCHAR2(30) NOT NULL, -- 비밀번호
MEM_NAME VARCHAR2(30) NOT NULL, -- 이름
MEM_EMAIL VARCHAR2(100) NOT NULL, -- 이메일
MEM_PHONE VARCHAR2(20) NOT NULL -- 휴대폰 번호
);

CREATE SEQUENCE MEM_IDX_SEQ
INCREMENT BY 1
START WITH 1; COMMIT;