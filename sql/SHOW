CREATE TABLE SHOW (
        SHOW_ID VARCHAR2(30) PRIMARY KEY, -- SHOW ID
        SHOW_YEAR NUMBER(4) NOT NULL, -- SHOW 연도
        SHOW_NAME VARCHAR2(50) NOT NULL, -- SHOW 이름
        SHOW_ADDR VARCHAR2(100) , -- SHOW 장소
        SHOW_DATE VARCHAR2(20), -- SHOW 날짜
        SHOW_CELEB VARCHAR2(50), -- SHOW 출연진
        SHOW_POST_IMG VARCHAR2(1000), -- SHOW 포스터 사진
        SHOW_SEAT_IMG VARCHAR2(1000), -- SHOW 좌석배치도 사진
        SHOW_TICKET_DATE VARCHAR2(20), -- SHOW 티켓팅 날짜
        SHOW_TICKET_ADDR VARCHAR2(1000), -- SHOW 티켓팅 홈페이지
        SHOW_LEVEL NUMBER(1) NOT NULL --  SHOW 요청 레벨
);
    CREATE SEQUENCE SHOW_IDX_SEQ
    START WITH 1;
COMMIT;